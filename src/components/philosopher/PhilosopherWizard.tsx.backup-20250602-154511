interface WizardStep {
  id: number
  title: string
  description: string
  icon: React.ReactNode
}

interface TradeOffAttribute {
  name: string
  leftExtreme: string  // ej: "Creativo"
  rightExtreme: string // ej: "Conservador"
  value: number        // 0-10, donde 0 = leftExtreme, 5 = neutral, 10 = rightExtreme
  description?: string // Descripci√≥n del atributo para tooltip
  leftDescription?: string // Descripci√≥n contextual del extremo izquierdo
  rightDescription?: string // Descripci√≥n contextual del extremo derecho
}

interface CommunicationTone {
  preset: string // Preset seleccionado o 'custom'
  description: string // Descripci√≥n personalizada del tono
}

interface PhilosopherData {
  // Paso 1: Identidad y Inspiraci√≥n
  name: string
  photoUrl?: string
  inspirationType: 'philosopher' | 'school' | ''
  inspirationSource: string // Fil√≥sofo espec√≠fico o escuela
  
  // Paso 2: Atributos Trade-off
  attributes: TradeOffAttribute[]
  communicationTone: CommunicationTone // Nuevo campo para tono de comunicaci√≥n
  
  // Paso 3: Salsa Secreta
  secretSauce: string
  
  // Paso 4: Mec√°nicas de Debate
  debateMechanics: string
  
  // Paso 5: Resultado del Procesamiento (generado por IA)
  personalityScores: { name: string; value: number }[]
  generatedDescription: string
  generatedFields?: {
    personalityTraits?: string[] | { name: string }[]
    coreBeliefs?: string[]
    argumentStyle?: string
  }
  
  // Configuraci√≥n final
  isPublic: boolean
}

